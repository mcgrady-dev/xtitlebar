<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleBarDefaultStyle">
        <item name="titleBarHeight">?android:attr/actionBarSize</item>
        <item name="titleBarColor">@color/titlebar_background</item>
        <item name="showBottomLine">true</item>
        <item name="bottomLineColor">@color/titlebar_bottom_line</item>
        <item name="leftTextColor">@color/xtitlebar_text_selector</item>
        <item name="leftTextSize">14sp</item>
        <item name="leftDrawable">@drawable/ic_arrow_back_24_gray</item>
        <item name="leftImageResource">@drawable/ic_arrow_back_24_gray</item>
        <item name="leftBackgroundDrawable">?android:attr/selectableItemBackground</item>
        <item name="rightTextColor">@color/xtitlebar_text_selector</item>
        <item name="rightTextSize">14sp</item>
        <item name="rightBackgroundDrawable">?android:attr/selectableItemBackground</item>
        <item name="centerTextColor">@color/titlebar_center_text</item>
        <item name="centerSubTextColor">@color/titlebar_center_subtext</item>
        <item name="centerTextSize">16sp</item>
        <item name="centerSubTextSize">10sp</item>
    </style>

</resources>