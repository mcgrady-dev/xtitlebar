<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.FullTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.FullTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleBarLeftImageStyle">
        <item name="leftType">imageButton</item>
        <item name="leftImageResource">@drawable/ic_arrow_back_24_gray</item>
    </style>

    <style name="TitleBarLeftTextStyle">
        <item name="leftType">imageButton</item>
        <item name="leftImageResource">@drawable/ic_arrow_back_24_gray</item>
    </style>

    <style name="TitleBarLeftImage.CenterTextStyle" parent="TitleBarLeftImageStyle">
        <item name="centerType">textView</item>
    </style>

</resources>
