<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTitleBarRes">
        <!--Title-->
        <item name="titleBarHeight">?attr/actionBarSize</item>
        <item name="titleBarColor">@android:color/white</item>
        <item name="titleSize">14sp</item>
        <item name="titleColor">@android:color/black</item>
        <!--LeftView-->
        <item name="leftTextColor">@android:color/black</item>
        <item name="leftTextSize">14sp</item>
        <!--RightView-->
        <item name="rightTextColor">@android:color/black</item>
        <item name="rightTextSize">14sp</item>
    </style>

    <style name="CustomTitleBarAttr">
        <!--Title-->
        <item name="titleBarHeight">?attr/actionBarSize</item>
        <item name="titleBarColor">@android:color/white</item>
        <item name="titleSize">14sp</item>
        <item name="titleColor">@android:color/holo_blue_bright</item>
        <!--LeftView-->
        <item name="leftTextColor">@android:color/holo_blue_bright</item>
        <item name="leftTextSize">14sp</item>
        <item name="leftDrawableRes">@drawable/ic_arrow_back_holo_light</item>
        <!--RightView-->
        <item name="rightTextColor">@android:color/holo_blue_bright</item>
        <item name="rightTextSize">14sp</item>
    </style>
</resources>